{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creates an s3 bucket website with a CloudFront distribution and Route53 alias record.",
    "Parameters": {
        "DomainName": {
            "Type": "String",
            "Description": "The registered DNS domain name for this application, e.g. example.com"
        }
    },
    "Resources": {
        "BucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "PolicyDocument": {
                    "Id": "S3BucketPolicy",
                    "Statement": [
                        {
                            "Sid": "ReadAccess",
                            "Action": [
                                "s3:GetObject"
                            ],
                            "Effect": "Allow",
                            "Resource": {
                                "Fn::Join": [
                                    "",
                                    [
                                        "arn:aws:s3:::",
                                        {
                                            "Ref": "WWWBucket"
                                        },
                                        "/*"
                                    ]
                                ]
                            },
                            "Principal": {
                                "AWS": "*"
                            }
                        }
                    ]
                },
                "Bucket": {
                    "Ref": "WWWBucket"
                }
            }
        },
        "RootBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "PublicRead",
                "BucketName": {
                    "Ref": "DomainName"
                },
                "WebsiteConfiguration": {
                    "RedirectAllRequestsTo": {
                        "HostName": {"Ref": "WWWBucket"}
                    }
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": 
                            {
                                "Ref": "DomainName"
                            }
                    }
                ]
            }
        },
        "WWWBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "PublicRead",
                "BucketName": {
                    "Fn::Join": [
                        "",
                        [
                            "www.",
                            {
                                "Ref": "DomainName"
                            }
                        ]
                    ]
                },
                "VersioningConfiguration": {
                    "Status": "Enabled"
                },
                "WebsiteConfiguration": {
                    "IndexDocument": "index.html",
                    "ErrorDocument": "404.html"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "www.",
                                    {
                                        "Ref": "DomainName"
                                    }
                                ]
                            ]
                        }
                    }
                ]
            }
        },
        "DNS": {
            "Type": "AWS::Route53::RecordSetGroup",
            "Properties": {
                "HostedZoneName": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "DomainName"
                            },
                            "."
                        ]
                    ]
                },
                "Comment": "Zone apex alias.",
                "RecordSets": [
                    {
                        "Name": {
                            "Fn::Join": [
                                "",
                                [
                                    "www.",
                                    {
                                        "Ref": "DomainName"
                                    }
                                ]
                            ]
                        },
                        "Type": "A",
                        "AliasTarget": {
                            "HostedZoneId": "Z2FDTNDATAQYW2",
                            "DNSName": {
                                "Fn::GetAtt" : [ 
                                  "WWWBucket",
                                  "DomainName"
                                ]
                            }
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "S3WebsiteURL": {
            "Value": {
                "Fn::GetAtt": [
                    "WWWBucket",
                    "WebsiteURL"
                ]
            },
            "Description": "URL for website hosted on S3"
        }
    }
}